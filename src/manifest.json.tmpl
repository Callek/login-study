{
  "manifest_version": 2,
  "name": "Login Telemetry Study",
  "version": "${package.version}${versionSuffix}",
  "description": "${package.description}",
  "hidden": true,

  "applications": {
    "gecko": {
      "id": "${package.name}-${variant}@mozilla.org"
    }
  },

  "browser_action": {},

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["normandyAddonStudy", "telemetry", "cookies"],
  "experiment_apis": {
    "prefs": {
      "schema": "privileged/prefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "privileged/prefs/api.js",
        "paths": [["prefs"]]
      }
    }


  }
}
